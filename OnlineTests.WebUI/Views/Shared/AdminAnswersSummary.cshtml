@model IEnumerable<OnlineTests.Domain.Entities.Answer>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th class="col-md-5 text-center">პასუხის ტექსტი</th>
            <th class="col-md-3 text-center">პასუხის სისწორე</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ans in Model)
        {
            @Html.HiddenFor(a=>ans.ID)
            <tr>
                <td>@ans.Text</td> 
                @if(ans.IsRight=="Yes"){
                    <td>სწორია</td>
                 }
                 else {<td>არასწორია</td>}
                <td>
                    @Html.ActionLink("რედაქტირება", "Edit_Create_Answer", new { questionID = ans.QuestionId, answerID = ans.ID  }, new { @class="btn btn-primary"})
                </td>
                <td>
                   @Html.ActionLink("წაშლა", "deleteAnswer", new {  answerID = ans.ID,returnUrl=Request.Url.PathAndQuery  }, new { @class="btn btn-warning"})
                </td>
           </tr>
        }
    </tbody>
</table>
@model OnlineTests.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "ონლაინ ტესტები: რეგისტრაცია";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">გთხოვთ გაიაროთ რეგისტრაცია</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
           @using(Html.BeginForm())
            {
            <div class="form-group">
                <label>@Html.DisplayNameFor( m => m.Username ):</label>
                @Html.TextBoxFor( m => m.Username, new { @class = "form-control", @placeholder="შეიყვანეთ მომხმარებლის სახელი" })
                @Html.ValidationMessageFor( m => m.Username )
            </div>
             <div class="form-group">
                <label>@Html.DisplayNameFor( m => m.Email ):</label>
                @Html.TextBoxFor( m => m.Email, new { @class = "form-control", @placeholder="შეიყვანეთ ელ-ფოსტა" })
                @Html.ValidationMessageFor( m => m.Email )
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor( m => m.Password ):</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder="შეიყვანეთ მომხმარებლის პაროლი" })
                @Html.ValidationMessageFor( m => m.Password )
            </div>
               <div class="form-group">
                <label>@Html.DisplayNameFor( m => m.ConfirmPassword ):</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder="გაიმეორეთ პაროლი" })
                @Html.ValidationMessageFor( m => m.ConfirmPassword )
            </div>
            @Html.ActionLink("შესვლა", "LoginUser",null, new{ @class="btn btn-default"})
            <input type="submit" value="რეგისტრაცია" class="btn btn-primary" />
            }
        </div>
   </div>
</div>

